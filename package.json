{
  "name": "toolset-hsp3",
  "publisher": "honobonosun",
  "version": "0.7.0",
  "preview": true,
  "description": "An VSCode extension to automate hsp3root path configuration.",
  "main": "out/extension.js",
  "readme": "./readme.md",
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onLanguage:hsp3"
  ],
  "repository": "git@github.com:honobonosun/toolset-hsp3.git",
  "author": "Honobono",
  "license": "MIT",
  "private": true,
  "engines": {
    "vscode": "^1.71.0"
  },
  "displayName": "toolset-hsp3",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "HSP3",
    "hsp",
    "auto-configuration"
  ],
  "contributes": {
    "configuration": {
      "title": "toolset-hsp3",
      "properties": {
        "toolset-hsp3.globs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "/hsp3*"
          ],
          "scope": "machine",
          "markdownDescription": "[node-glob](https://www.npmjs.com/package/glob) pattern indicating the directory where HSP3 is installed."
        },
        "toolset-hsp3.current": {
          "type": "object",
          "scope": "machine"
        },
        "toolset-hsp3.override.enable": {
          "type": "boolean",
          "markdownDescription": "Override the extension settings in override.list with the current hsp3root.",
          "scope": "machine"
        },
        "toolset-hsp3.override.applyChangesImmediately": {
          "type": "boolean",
          "scope": "machine"
        },
        "toolset-hsp3.override.applyChangesImmediatelyInReloadWindow": {
          "type": "boolean",
          "scope": "machine"
        },
        "toolset-hsp3.override.list": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "hoge.fuga"
          ],
          "scope": "machine"
        }
      }
    },
    "configurationDefaults": {},
    "commands": [
      {
        "command": "toolset-hsp3.select",
        "title": "select hsp3root",
        "category": "hsp.toolset"
      },
      {
        "command": "toolset-hsp3.open",
        "title": "open hsp3root file manager",
        "category": "hsp.toolset"
      },
      {
        "command": "toolset-hsp3.override",
        "title": "override other extension settings",
        "category": "hsp.toolset"
      },
      {
        "title": "insider:toolset-hsp3.current",
        "command": "toolset-hsp3.current",
        "enablement": "false"
      },
      {
        "title": "insider:toolset-hsp3.current.toString",
        "command": "toolset-hsp3.current.toString",
        "enablement": "false"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run -S esbuild-base -- --sourcemap",
    "watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "fmt": "prettier --write \"src/**/*.ts\"&& npm run test -- --fix",
    "test": "eslint src --ext ts && tsc --noEmit"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/is-glob": "^4.0.2",
    "@types/vscode": "^1.71.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "glob": "^8.0.3",
    "is-glob": "^4.0.3"
  }
}