{
  "name": "toolset-hsp3",
  "displayName": "toolset-hsp3",
  "description": "toolset extension for hsp3",
  "publisher": "honobonosun",
  "version": "0.3.0",
  "preview": true,
  "license": "MIT",
  "repository": "https://github.com/honobonosun/toolset-hsp3",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "HSP",
    "hsp3",
    "multi-root ready"
  ],
  "activationEvents": [
    "onCommand:toolset-hsp3.select",
    "onCommand:toolset-hsp3.launch",
    "onCommand:toolset-hsp3.get.keyword",
    "onCommand:toolset-hsp3.get.hsp3dirname",
    "onCommand:toolset-hsp3.get.hsp3root",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Toolset HSP3",
      "type": "object",
      "properties": {
        "toolset-hsp3.hsp3cl.globs": {
          "markdownDescription": "Specify the search destination for the HSP3 environment(hsp3cl.exe file) as an array, using the glob wildcard. For specifications, see [node-glob](https://www.npmjs.com/package/glob).",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "/hsp3*/hsp3cl.exe"
          ],
          "scope": "machine"
        },
        "toolset-hsp3.launch.commands": {
          "markdownDescription": "Sets the commands to be executed via toolset-hsp3 as a string type array.\n\nIf `toolset-hsp3.launch.absolute` is true, it is converted to a string with hsp3root inserted at the beginning.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "hdl.exe ${command:toolset-hsp3.keyword}",
            "hsp3dh.exe",
            "gpbconv.exe"
          ],
          "scope": "window"
        },
        "toolset-hsp3.current": {
          "type": "string",
          "scope": "window",
          "markdownDescription": "current hsp3root path."
        },
        "toolset-hsp3.launch.cwd": {
          "type": "string",
          "scope": "window",
          "default": "",
          "examples": [
            "",
            "${fileDirname}",
            "${command:toolset-hsp3.get.dirname}"
          ],
          "markdownDescription": "Sets the current directory for command execution.\n\nAn empty string is set to the VSCode default current directory."
        },
        "toolset-hsp3.launch.absolute": {
          "type": "boolean",
          "scope": "window",
          "description": "Command run with an absolute path.\n\nThis sets use to insert `${command:toolset-hsp3.get.dirname}` at the beginning.\n\nSome the shell commands, may not work.",
          "default": false
        },
        "toolset-hsp3.launch.useWine": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Task runner via [Wine](https://www.winehq.org/) command.",
          "scope": "window"
        },
        "toolset-hsp3.launch.useWSL": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Windows only, without exe extension, run with WSL.",
          "scope": "window"
        }
      }
    },
    "commands": [
      {
        "command": "toolset-hsp3.select",
        "title": "Select hsp3root path",
        "category": "hsp"
      },
      {
        "command": "toolset-hsp3.launch",
        "title": "Execute toolset-hsp3 command",
        "category": "hsp"
      },
      {
        "command": "toolset-hsp3.get.keyword",
        "title": "insider:Get keyword that is on editor",
        "enablement": "false"
      },
      {
        "command": "toolset-hsp3.get.dirname",
        "title": "insider:Get current hsp3root dirname path",
        "enablement": "false"
      },
      {
        "command": "toolset-hsp3.get.path",
        "title": "insider:Get current hsp3root path",
        "enablement": "false"
      }
    ],
    "taskDefinitions": [
      {
        "type": "toolset-hsp3",
        "when": "shellExecutionSupported",
        "required": [
          "command"
        ],
        "properties": {
          "command": {
            "type": "string"
          },
          "args": {
            "type": "string"
          },
          "cwd": {
            "type": "string"
          },
          "env": {
            "type": "object"
          },
          "absolute": {
            "type": "boolean",
            "description": "Join the toolset directory to the command."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/is-glob": "^4.0.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "mocha": "^9.1.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.4.3",
    "vsce": "^2.6.7"
  },
  "dependencies": {
    "glob": "^7.2.0",
    "is-glob": "^4.0.3"
  },
  "extensionKind": [
    "workspace",
    "ui"
  ]
}
