{
  "name": "toolset-hsp3",
  "displayName": "toolset-hsp3",
  "description": "説明",
  "version": "0.4.0",
  "preview": true,
  "author": "honobonosun",
  "publisher": "honobonosun",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/honobonosun/toolset-hsp3.git"
  },
  "bugs": {
    "url": "https://github.com/honobonosun/toolset-hsp3/issues"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "HSP",
    "hsp3",
    "multi-root ready"
  ],
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "vsce:package": "vsce package --out toolset-hsp3.vsix"
  },
  "dependencies": {
    "glob": "^8.0.3",
    "is-glob": "^4.0.3"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/is-glob": "^4.0.2",
    "@types/node": "^18.7.2",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "main": "./dist/extension",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "toolset-hsp3",
      "type": "object",
      "properties": {
        "toolset-hsp3.globs": {
          "markdownDescription": "Specify the search destination for the HSP3 environment(hsp3cl.exe file) as an array, using the glob wildcard. For specifications, see [node-glob](https://www.npmjs.com/package/glob).",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "/hsp3*/hsp3cl.exe"
          ],
          "scope": "machine"
        }
      }
    }
  }
}
